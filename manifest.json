{

  "manifest_version": 2,
  "name": "BookmarksIcons",
  "version": "1.0",

  "description": "Makes your bookmarks smaller",
  "homepage_url": "https://github.com/Zeruk/Bookmarks-Icons",

  "icons": {
    "48": "icons8-book-shelf-48.png",
    "96": "icons8-book-shelf-96.png"
  },

  "permissions": [
    "bookmarks",
    "tabs",
    "alarms"
  ],
  
  "browser_action": {
    "default_area":"personaltoolbar",
    "default_icon": {
      "19": "icons8-book-shelf-19.png",
      "38": "icons8-book-shelf-38.png"
    },
    "default_title": "Show bookmarks",
    "default_popup": "popup/bm.html"
  },

  "background": {
    "page": "popup/bm.html"
  }
}