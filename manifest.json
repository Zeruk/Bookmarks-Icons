{

  "manifest_version": 2,
  "name": "BookmarksIcons",
  "version": "1.0",

  "description": "Makes your bookmarks smaller",

  "icons": {
    "48": "icons8-book-shelf-48.png",
    "96": "icons8-book-shelf-96.png"
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "icons8-book-shelf-19.png",
      "38": "icons8-book-shelf-38.png"
    },
    "default_title": "Whereami?"
  }

}